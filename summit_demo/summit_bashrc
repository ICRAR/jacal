module load gcc/6.4.0
module load cmake
module load cuda
module load netlib-lapack
module load boost
module load fftw
module load gsl
module load curl

alias gcc='/sw/summit/gcc/6.4.0/bin/gcc'
alias g++='/sw/summit/gcc/6.4.0/bin/g++'
alias gfortran='/sw/summit/gcc/6.4.0/bin/gfortran'

export CC=/sw/summit/gcc/6.4.0/bin/gcc
export CXX=/sw/summit/gcc/6.4.0/bin/g++
export FC=/sw/summit/gcc/6.4.0/bin/gfortran

export SUMMIT_VENV=/gpfs/alpine/ast157/proj-shared/jacal_install_summit
export PATH=$SUMMIT_VENV/bin:$PATH
export CPATH=$SUMMIT_VENV/include:$CPATH
export LIBRARY_PATH=$SUMMIT_VENV/lib:$SUMMIT_VENV/lib64:$LIBRARY_PATH
export LD_LIBRARY_PATH=$SUMMIT_VENV/lib:$SUMMIT_VENV/lib64:$LD_LIBRARY_PATH
